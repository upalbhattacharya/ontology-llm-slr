@inproceedings{zhao-etal-2024-divknowqa,
    title = "{DIVKNOWQA}: Assessing the Reasoning Ability of {LLM}s via Open-Domain Question Answering over Knowledge Base and Text",
	author = "Zhao, Wenting  and
      Liu, Ye  and
      Niu, Tong  and
